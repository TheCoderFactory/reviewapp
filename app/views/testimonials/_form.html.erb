<%= simple_form_for(@testimonial) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, as: :text %>
    <%= f.input :star_rating %>
    
    <%= f.input :business_id, as: :hidden, input_html: { value: @business.id } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
